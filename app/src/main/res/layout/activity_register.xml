<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8CACA0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/BGDecore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="1" />

    <ImageView
        android:id="@+id/textbauble"
        android:layout_width="296dp"
        android:layout_height="203dp"

        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/BGDecore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/textbauble" />

    <EditText
        android:id="@+id/LogEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/roundstyle"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/HintEmail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="#C2C7B5"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BGDecore"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/LogPassowrd"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/roundstyle"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/HintPassword"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#C2C7B5"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BGDecore"
        app:layout_constraintVertical_bias="0.028" />

    <EditText
        android:id="@+id/ReLogPassowrd"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/roundstyle"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/RegRePassowrd"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#C2C7B5"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BGDecore"
        app:layout_constraintVertical_bias="0.309" />

    <Button
        android:id="@+id/LogButton"
        android:layout_width="187dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#56776c"
        android:text="@string/RegButton"
        android:textColor="@color/white"
        android:textColorLink="#56776c"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876" />

    <ImageView
        android:id="@+id/AboutIcon"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about_icon" />

    <ImageView
        android:id="@+id/Yeen"
        android:layout_width="196dp"
        android:layout_height="186dp"

        android:layout_marginBottom="-53dp"
        app:layout_constraintBottom_toTopOf="@+id/BGDecore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yeen" />

    <TextView
        android:id="@+id/OldUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:text="@string/oldUserButton"
        android:textColor="#f3f7e8"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BGDecore"
        app:layout_constraintVertical_bias="0.394" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerName"
        android:textColor="#353539"

        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BGDecore"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/RegText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:text="@string/RegisterHi"
        android:textColor="#353539"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/Yeen"
        app:layout_constraintEnd_toEndOf="@+id/textbauble"
        app:layout_constraintStart_toStartOf="@+id/textbauble" />


</androidx.constraintlayout.widget.ConstraintLayout>