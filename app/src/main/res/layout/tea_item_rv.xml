<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingBottom="10dp"
    android:paddingEnd="1dp"
    android:paddingTop="10dp"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/tea_item_photo"
        android:layout_width="210dp"
        android:layout_height="290dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circle_view2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/tealeaf"
                app:layout_constraintBottom_toTopOf="@+id/tea_item_photo2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tea_type_tv"
                android:layout_width="155dp"
                android:layout_height="28dp"
                android:backgroundTint="@color/maincolor"
                android:backgroundTintMode="multiply"
                android:background="@drawable/rounded_text"
                android:padding="4dp"
                android:paddingTop="8dp"
                android:text="Вид чаю"
                android:textAlignment="center"
                android:textColor="@android:color/black"

                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/circle_view2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/tea_item_photo2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.4"
                android:background="@color/accentcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/circle_view2"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tea_name_tv"
                android:layout_width="188dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"

                android:ellipsize="end"
                android:gravity="start"
                android:lines="2"
                android:maxLines="2"
                android:text="Назва чаю"
                android:textColor="@android:color/black"
                android:textSize="15sp"


                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tea_item_photo2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
