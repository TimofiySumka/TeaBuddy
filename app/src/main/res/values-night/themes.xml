<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TeaBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#759086</item>
        <item name="android:navigationBarColor">@color/thidcolor</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>


    </style>

    <style name="CustomActiveIndicatorStyle">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.NavigationBar.ActiveIndicator.Shape</item>
        <item name="android:color">@color/activeitem</item>
    </style>

    <style name="RoundImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="hintTextColor">@color/black</item>
    </style>
    <style name="CircleButtonStyle" >
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>

<style name="ToggleButtonCustom" parent="">
    <item name="toggle_backgroundColor">@color/maincolor</item>
    <item name="toggle_textSize">18dp</item>
    <item name="toggle_textColor">@color/thidcolor</item>
    <item name="toggle_btnCornerRadius">15dp</item>
    <item name="toggle_selectAnimation">fade</item>
    <item name="android:layout_marginBottom">10dp</item>


    <item name="toggle_textAlignment">center</item>
    <item name="toggle_textPaddingBottom">5dp</item>
    <item name="toggle_icon">@drawable/tealeaf</item>
    <item name="toggle_iconGravity">top|center</item>
    <item name="toggle_textGravity">bottom|center</item>


    <item name="toggle_selectedTextColor">@color/maincolor</item>
    <item name="toggle_selectedBackgroundColor">@color/thidcolor</item>
    <item name="toggle_selectedBorderWidth">4dp</item>
    <item name="toggle_selectedBorderColor">@color/maincolor</item>



</style>

    <style name="CircleButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>